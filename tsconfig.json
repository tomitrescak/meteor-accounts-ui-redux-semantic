{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "removeComments": false,
    "noLib": false,
    "lib": [
      "es2015",
      "dom",
      "es2015.promise",
      "es2016",
      "es2017"
    ],
    "preserveConstEnums": true,
    "outDir": "./dist/",
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
